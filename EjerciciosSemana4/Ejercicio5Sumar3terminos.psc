	Escribir "Ingrese un numero para sumar"
	Leer NumeroEntrada1
	
	Escribir "Ingrese segundo numero para sumar"
	Leer NumeroEntrada2
	
	Escribir "Ingrese tercer numero para sumar"
	Leer NumeroEntrada3
	
	Si NumeroEntrada1 > 0
		Total = NumeroEntrada1 +  NumeroEntrada2 + NumeroEntrada3
		
	FinSi
	
	Escribir "El total de la Suma es  ", Total
	
	
